@using ThiGiuaKy_LapTrinhWeb.Models;
@model ThiGiuaKy_LapTrinhWeb.Models.LoaiSP 
@{
    ViewBag.Title = "Index";
    List<LoaiSP> list= ViewData["DsLoai"] as List<LoaiSP>;
}
<style>
    form{
        display: inline;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Quick Example</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Danh sách đơn hàng mới đặt</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã loại</th>
                                                <th>Tên hàng</th>
                                                <th>Số lượng</th>
                                                <th>Nhóm lệnh</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                foreach (LoaiSP i in list)
                                                {
                                                    <tr>
                                                        <td>@i.maLoai</td>
                                                        <td>@i.tenLoai</td>
                                                        <td>@i.SanPhams.Where(r=>r.maLoai == i.maLoai).Count()</td>
                                                        <td>
                                                            @using (Html.BeginForm("Delete", "ChungLoai_NganhHang", FormMethod.Post))
                                                            {
                                                                <input type="hidden" name="maloai" value="@i.maLoai" />
                                                                <button class="btn btn-danger">xóa</button>
                                                            }
                                                            @using (Html.BeginForm("Update", "ChungLoai_NganhHang", FormMethod.Post))
                                                            {
                                                                <input type="hidden" name="UpdateMa" value="@i.maLoai" />
                                                                <button class="btn btn-success">chỉnh sửa</button>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                                @Html.HiddenFor(x =>x.maLoai)
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <!--/.col (left) -->
        <div class="col-md-6">
            <!-- general form elements -->
            @using (Html.BeginForm("Index", "ChungLoai_NganhHang", FormMethod.Post))
            {
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin chính</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    
                    <div class="card-body">
                        <div class="form-group">
                            <label for="NameProduct">Tên nhóm sản phẩm</label>
                            @Html.TextBoxFor(x=>x.tenLoai , new {@class = "form-control", @placeholder= "Tên loại sản phẩm......" })
                        </div>
                        <div class="form-group">
                            <label for="InfoCategory">Giới thiệu loại hàng</label>
                            @Html.TextAreaFor(m =>m.ghiChu , new { @class = "form-control", @placeholder = "......" ,@rows = "10" })
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                        </div>
                    </div>
                  
                </div>
            }
        </div>
        <!--/.col (left) -->
    </div>
</div>